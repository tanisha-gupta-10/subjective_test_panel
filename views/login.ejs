<!doctype html>
<html lang="en">

<head>
  <title>Restrant Admin Panel</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<style>
  .login-cont {
    background: url("https://cdn-ijnhp.nitrocdn.com/pywIAllcUPgoWDXtkiXtBgvTOSromKIg/assets/images/optimized/rev-5794eaa/www.jaypeehotels.com/blog/wp-content/uploads/2024/07/Blog-3-scaled.jpg");
    width: 100vw;
    height: 100vh;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .login-box {
    background-color: #11111190;
    border-radius: 20px;
    display: flex;
    /* flex-direction: column; */
    width: 70%;
    height: 70%;
    font-size: 20px;
    color: white;
    font-weight: 600;
    border-radius: 30px;
  }

  .login-box div {
    flex: 1;
  }

  .left-part {
    display: grid;
    place-items: center;
    text-align: center;
    font-size: 80px;
    font-weight: 800;
    color: white;
    background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url("https://images.pexels.com/photos/1640777/pexels-photo-1640777.jpeg");
    background-size: cover;
    background-blend-mode: color-burn;
    border-radius: 30px 0 0 30px;
  }

  .right-part {
    display: flex;
    flex-direction: column;
    gap: 20px;
    justify-content: center;
    padding: 20px 30px;
    /* align-items: center; */
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  /* From Uiverse.io by shadowmurphy */
  .input {
    border: 2px solid transparent;
    /* width: 15em; */
    height: 2.5em;
    padding-left: 0.8em;
    outline: none;
    overflow: hidden;
    /* background-color: #F3F3F3; */
    border-radius: 10px;
    transition: all 0.5s;
    font-size: 18px;
  }

  .input:hover,
  .input:focus {
    border: 2px solid #4A9DEC;
    box-shadow: 0px 0px 0px 7px rgb(74, 157, 236, 20%);
    background-color: white;
  }

  .btn {
    width: 50%;
    margin: auto;
    font-size: 20px;
    font-weight: 700;
  }
</style>

<body>

  <div class="login-cont">

    <div class="login-box">
      <div class="left-part">
        Welcome To <br> Stilt
      </div>
      <div class="right-part">
        <h2 class="text-center" style="font-size: 32px; font-weight: 700  ;">Sign Up</h2>
        <form method="post" action="/signup">

          <div class="form-group">
            <label for="name">Name</label>
            <!-- From Uiverse.io by shadowmurphy -->
            <input class="input form-control" type="text" placeholder="Tanisha Gupta">
          </div>

          <div class="input-group" style="gap: 20px;">
            <div class="form-group">
              <label for="phoneNumber">Phone Number</label>
              <!-- From Uiverse.io by shadowmurphy -->
              <input class="input form-control" type="tel" maxlength="10" placeholder="99XXXXXXXX">
            </div>

            <div class="form-group">
              <label for="email">Email</label>
              <!-- From Uiverse.io by shadowmurphy -->
              <input class="input form-control" type="email" placeholder="user@email.com">
            </div>
          </div>



          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="input form-control" id="password" placeholder="Enter password">
          </div>
          <button type="submit" class="btn btn-primary">Sign Up</button>
          <div class="signUp m-auto">Already have account ? <span style="color: #ba4f09;">Log In</span></div>
        </form>
      </div>
    </div>
  </div>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
    crossorigin="anonymous"></script>
</body>

</html>